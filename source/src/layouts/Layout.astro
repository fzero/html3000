---
import "../styles/main.scss";
---

<html lang="en" data-theme="dark">
  <head>
    <!-- Meta -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="color-scheme" content="light dark" />
    <meta
      name="description"
      content="No divs, no spans, no classes, no problem"
    />
    <meta name="theme-color" content="#13171f" />
    <title>HTML3000: A Better Way to Write HTML for Modern Apps</title>

    <!-- Open Graph -->
    <meta
      property="og:title"
      content="HTML3000: A Better Way to Write HTML for Modern Apps"
    />
    <meta
      property="og:description"
      content="No divs, no spans, no classes,no problem"
    />
    <meta property="og:url" content="https://html3000.dev" />
    <meta property="og:site_name" content="HTML3000" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="en_US" />
    <meta
      property="og:image"
      content="https://html3000.dev/assets/html3000-squared.png"
    />
    <meta property="og:image:alt" content="HTML3000" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content="HTML3000: A Better Way to Write HTML for Modern Apps"
    />
    <meta
      name="twitter:description"
      content="No divs, no spans, no classes, no problem"
    />
    <meta
      name="twitter:image"
      content="https://html3000.dev/assets/html3000-squared.png"
    />
    <meta name="twitter:image:alt" content="HTML3000" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Chakra+Petch:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Overpass+Mono:400&display=swap"
      rel="stylesheet"
    />

    <!-- Favicons -->
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/assets/favicons/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/assets/favicons/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/assets/favicons/favicon-16x16.png"
    />
    <link rel="manifest" href="/assets/favicons/site.webmanifest" />
  </head>

  <body>
    <main>
      <slot />
    </main>
  </body>
</html>
